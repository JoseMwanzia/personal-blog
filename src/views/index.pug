doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Personal Blog
    link(rel="stylesheet", href="styles.css") 
  body
    header
      div.container
        h1 Personal Blog
        //- a(href="http://", target="_blank", rel="noopener noreferrer", class="button") + Add
      div.articles(id="articles")
            each post in articles
              form(action=`/article/${post.content.id}`, method="get") 
                span(class="post" onclick="this.closest('form').submit()" style="cursor: pointer")
                  h3.title= post.article
                  p.description= post.content.publishing_date
  
